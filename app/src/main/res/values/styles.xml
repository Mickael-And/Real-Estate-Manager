<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOnError">@color/colorOnError</item>


        <!-- TODO: Utilisé pour la barre de notifications sûrement plus tard -->
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <!-- Style of real estate type in the list -->
    <style name="RealEstateType">
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textSize">@dimen/text_size_real_estate_type</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style of real estate city in the list -->
    <style name="RealEstateCity">
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textSize">@dimen/text_size_real_estate_city</item>
    </style>

    <!-- Style of real estate price in the list -->
    <style name="RealEstatePrice">
        <item name="android:textSize">@dimen/text_size_real_estate_price</item>
        <item name="android:textColor">@color/colorSecondaryVariant</item>
    </style>

    <!-- Details window styles -->
    <style name="DetailsWindow" />

    <!-- Details text style -->
    <style name="DetailsWindow.Text">
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textSize">@dimen/details_text_size</item>
    </style>

    <!-- Details label style -->
    <style name="DetailsWindow.Text.Label">
        <item name="maxLines">1</item>
        <item name="android:padding">@dimen/label_padding</item>
        <item name="android:textSize">@dimen/label_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Details label style -->
    <style name="DetailsWindow.Text.DetailsLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/details_label_margin</item>
        <item name="android:layout_marginBottom">@dimen/details_label_margin</item>
        <item name="android:drawablePadding">@dimen/details_icon_padding</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Area label style -->
    <style name="DetailsWindow.Text.DetailsLabel.Area">
        <item name="android:drawableStart">@drawable/baseline_aspect_ratio_black_18</item>
    </style>

    <!-- Rooms label style -->
    <style name="DetailsWindow.Text.DetailsLabel.Rooms">
        <item name="android:drawableStart">@drawable/baseline_home_black_18</item>
    </style>

    <!-- Bathrooms label style -->
    <style name="DetailsWindow.Text.DetailsLabel.Bathrooms">
        <item name="android:drawableStart">@drawable/baseline_bathtub_black_18</item>
    </style>

    <!-- Bedrooms label style -->
    <style name="DetailsWindow.Text.DetailsLabel.Bedrooms">
        <item name="android:drawableStart">@drawable/baseline_local_hotel_black_18</item>
    </style>

    <!-- Location label style -->
    <style name="DetailsWindow.Text.DetailsLabel.Location">
        <item name="android:drawableStart">@drawable/baseline_room_black_18</item>
    </style>

    <!-- Divider style -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>


</resources>